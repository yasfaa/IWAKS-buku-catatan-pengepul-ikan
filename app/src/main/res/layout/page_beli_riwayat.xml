<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/purBoxTopBeliRiwayat"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/backButtonBeliRiwayat"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        app:icon="@drawable/back"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/purBoxTopBeliRiwayat"
        app:layout_constraintEnd_toEndOf="@id/purBoxTopBeliRiwayat"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/purBoxTopBeliRiwayat"
        app:layout_constraintTop_toTopOf="@id/purBoxTopBeliRiwayat"
        tools:ignore="SpeakableTextPresentCheck"
        android:onClick="backButton"/>

    <TextView
        android:id="@+id/beliRiwayat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_slab_bold"
        android:text="Riwayat Pembelian"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/purBoxTopBeliRiwayat"
        app:layout_constraintEnd_toEndOf="@id/purBoxTopBeliRiwayat"
        app:layout_constraintStart_toEndOf="@id/backButtonBeliRiwayat"
        app:layout_constraintTop_toTopOf="@id/purBoxTopBeliRiwayat" />

    <ListView
        android:layout_width="409dp"
        android:layout_height="664dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/purBoxTopBeliRiwayat" />
</androidx.constraintlayout.widget.ConstraintLayout>